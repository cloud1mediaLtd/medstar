---
import { Icon } from "astro-icon";

import Socialicons from "./socialicons.astro";
import Nightmode from "./Nightmode.astro";



const menuitems = [
  {
    title: "About us",
    path: "/about",
    target: "",
  },
  {
    title: "Courses",
    path: "/courses",
    target: "",
  },
  {
    title: "Team",
    path: "/team",
    target: "",
  },

  {
    title: "Accommodation",
    path: "/accommodation",
    target: "",
  },
  {
    title: "Resources",
    path: "/resources",
    target: "",
  },
  {
    title: "Privacy policy",
    path: "/policy",
    target: "",
  },
  {
    title: "Contact",
    path: "/contact",
    target: "",
  },
