---
const review = [
  {
    name: "Tracy Wardle",
    text: "the fitrst review",
    url: "www.thebeautycode.co.uk",
  },
  { name: "Adam Smith", text: "the fitrst review", url: "www" },
  { name: "Adam Smith", text: "the fitrst review", url: "www" },
  { name: "Adam Smith", text: "the fitrst review", url: "www" },
];
---

<div class="">
  <div class="mt-16 md:mt-16">
    <div class="flex justify-center">
      <h2
        class="text-center lg:text-start text-3xl lg:text-4xl font-bold lg:tracking-tight">
        Reviews
      </h2>
    </div>
    <p class="font-semibold text-md tracking-tight text-center text-slate-600">
      What my customers say
    </p>
    <p class="text-center text-lg my-4 text-slate-600">________</p>
  </div>
</div>

<div class="">
  <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
    {
      review.map((item) => (
        <li>
          <div class="bg-black text-white h-64 rounded-lg p-4">
            <h1>{item.name}</h1>
            <p>{item.text}</p>
            <p class="text-sm">{item.url}</p>
          </div>
        </li>
      ))
    }
  </ul>
</div>
