const social = [
  { name: "Facebook", icon: "ion:social-facebook" },
  { name: "Instagram", icon: "ion:social-instagram" },
  { name: "Youtube", icon: "ion:social-youtube" },
];
const menuitems = [
  {
    title: "About us",
    path: "/about",
    target: "",
  },
  {
    title: "Courses",
    path: "/courses",
    target: "",
