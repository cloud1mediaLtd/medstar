---

<footer class=" py-5 bg-slate-800">
  <div class="flex justify-between items-center p-5 max-w-screen-xl mx-auto">
    <div>
      <ul class="grid grid-cols-2 gap-2">
        {
          menuitems.map((item, index) => (
            <li>
              <a
                href={item.path}
                target={item.target}
                class="flex py-2 text-white hover:text-gray-200"
              >
                {item.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="">
      <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {
          social.map((item) => (
            <li>
              <div class="flex   mb-2">
                <Icon class="text-white h-6" name={item.icon} />
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <div class="flex justify-between items-center py-4 max-w-screen-xl mx-auto border-t border-white/10">
    <div class="">
      <p class="text-center text-xs text-slate-200 mt-1">
        Hosted By <a
          href="https://cloud1media.com"
          target="_blank"
          rel="noopener"
          class="hover:underline"
        >
          Cloud1media Ltd
        </a>
      </p>
    </div>
    <div class="text-center text-xs text-slate-200 mt-1">
