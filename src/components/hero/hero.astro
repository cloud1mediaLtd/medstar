---
import { Image, Picture } from "@astrojs/image/components";
import { urlFor } from "@utils/image";
import { getHero } from "@utils/sanity";

const hero = await getHero();

console.log(hero);
---

<section class="">
  <div
    class="mx-auto max-w-screen-xl relative bg-gray-800 md:mt-8 rounded-lg overflow-hidden"
  >
    <Picture
      src={urlFor(hero.mainImage).url()}
      alt={hero.title}
      class="absolute inset-0 object-cover w-full h-full bg-center bg-no-repeat bg-cover bg-gray-900 opacity-60 rounded-lg border-gray-200 dark:border-gray-700"
      widths={[400, 800, 1200]}
      aspectRatio="3:2"
    />

    <div
      class="relative px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56"
    >
      <div id="main">
        <h1
          class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-4xl lg:text-5xl"
        >
          {hero.title}
        </h1>
        <p
          class="mb-8 text-lg font-semibold text-gray-100 lg:text-xl sm:px-16 lg:px-48"
        >
          {hero.paragraph}
        </p>
        <div
          class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4"
        >
          <a
            href={hero.linkA}
            class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-medbg hover:bg-medbgdark focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900 shadow-md"
          >
            Get started
            <svg
              aria-hidden="true"
              class="ml-2 -mr-1 w-4 h-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href={hero.linkB}
            class="inline-flex justify-center hover:text-gray-900 items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg border border-white hover:bg-gray-100 focus:ring-4 focus:ring-gray-400 shadow-md"
          >
            Learn more
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
