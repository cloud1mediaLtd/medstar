---
import { SEO } from "astro-seo";
import Footer from "@components/nav/footer.astro";
import Navbar from "@components/nav/navbar.astro";
import Location from "@components/map/location.jsx";
import "@fontsource/inter/variable.css";
import Speeddial from "@components/speeddial.astro";

import Accordian from "@components/accordian.astro";
import Container from "@components/ui/container.astro";

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Medastra"
  : "Medastra - Become a star Doctor";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <script>
      // On page load or when changing themes, best to add inline in `head` to avoid FOUC
      if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
      } else {
          document.documentElement.classList.remove('dark')
      }
  </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
<script src='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js'></script>
<link href='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css' rel='stylesheet' />




    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Plab 2 Courses Manchester"
      canonical={canonicalURL}
      twitter={{
        creator: "@anasmahmud",
        site: "@anasmahmud",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Medastra - Plab 2 Courses Manchester`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Home page screenshot",
        },
      }}
    />
  </head>
  <body class="dark:bg-slate-900 bg-slate-50">
    <Navbar />
    <slot />
    <Container>
      <Accordian />
    </Container>
    
    <Location client:visible />

    <Speeddial />

    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"></script>
  </body>
</html>



